<h1>New Book</h1>

<%= form_with model: @book do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :author %>
  <%= form.text_field :author %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.submit "Create Book" %>
<% end %>

<%= link_to "Back", books_path %>
